<Window x:Class="ClienteActividades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="525" Width="584" ResizeMode="CanMinimize" Icon="Images/ic_alarm_on_grey600_24dp.png">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid Margin="0,0,2,0" ToolTip="Acceder">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="264*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="56*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Descripción" HorizontalAlignment="Left" Margin="20,25,0,0" VerticalAlignment="Top" Width="100" Background="{x:Null}"/>
        <Label Content="Tipo" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox HorizontalAlignment="Left" Height="87" Margin="125,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Name="Descripcion" Grid.ColumnSpan="4"/>
        <Button Name="BtnTimer" HorizontalAlignment="Left" Margin="41,25,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.055,0.457" Height="66" Click="Button_Click" ToolTip="Inicia o para el conteo de la actividad" Grid.Column="3" Grid.ColumnSpan="2">
            <Button.Background>
                <ImageBrush ImageSource="Images/ic_alarm_on_grey600_24dp.png"/>
            </Button.Background>
        </Button>
        <Label Name="ActividadTimer" HorizontalAlignment="Left" Height="26" Margin="169,130,0,0" VerticalAlignment="Top" Width="130" Grid.Column="1" Grid.ColumnSpan="3"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="125,130,0,0" TextWrapping="Wrap" Name="Tipo" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2"/>
        <Button Name="BtnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="41,104,0,0" VerticalAlignment="Top" Width="75" Height="66" Click="Button_Click_1" IsEnabled="False" ToolTip="Guarda el registro" Grid.Column="3" Grid.ColumnSpan="2"/>
        <DataGrid Name="dtgActividades"  HorizontalAlignment="Left" Margin="20,215,0,0" VerticalAlignment="Top" Grid.ColumnSpan="5" Height="200" Width="531"
            AlternatingRowBackground="Gainsboro"  AlternationCount="2" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoActividad.Nombre}" />
                <DataGridTextColumn Header="Inicio" Binding="{Binding HoraInicio}" />
                <DataGridTextColumn Header="Fin" Binding="{Binding HorFin}" />
                <DataGridTextColumn Header="Duración" Binding="{Binding Duracion}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
